
<div class="wrapper">
  <h1><%= @task.title %></h1>

  <div class="link">
    <%= link_to edit_task_path do %>
      <i class="fas fa-edit"></i>
    <% end %>
    <%= link_to "Edit Task", edit_task_path %>
  </div>

  <div class="task-details">
    <%= @task.details %>
  </div>

  <div class="task-status">
    <% if @task.completed? %>
    <i class="far fa-check-square"></i><p>This task is completed!</p>
    <% else %>
      <i class="far fa-square"></i><p>This task is not completed yet!</p>
    <% end %>
  </div>

  <%= link_to tasks_path do %>
    <i class="fas fa-undo-alt"></i>
  <% end %>
  <%= link_to "Back to list", tasks_path %>
</div>
