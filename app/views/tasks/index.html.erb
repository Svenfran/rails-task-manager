<h1>My Tasks</h1>

<ul>
  <% @tasks.each do |t| %>
    <%if t.completed?%>
      <li><i class="far fa-check-square"></i><%= link_to t.title, task_path(id: t.id) %><%= link_to task_path(t), method: :delete, data: {confirm: 'Are you sure?'} do %>
        <i class="far fa-trash-alt"></i>
      <% end %></li>
    <%else%>
      <li><i class="far fa-square"></i><%= link_to t.title, task_path(id: t.id) %><%= link_to task_path(t), method: :delete, data: {confirm: 'Are you sure?'} do %>
       <i class="far fa-trash-alt"></i>
      <% end %></li>
    <%end%>
  <% end %>
</ul>

<%=link_to "Add a new task", new_task_path%>